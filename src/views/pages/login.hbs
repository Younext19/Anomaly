    <div class="section2">
        <h1>Se Connecter</h1>
        <form action="/login" method="post">
            {{#if info}}
                <div class="error">{{info.message}}</div>
            {{/if}}
            <div class="from-group">
                <input type="text" name="username" id="username" placeholder="Nom d'utilisateur" value="{{username}}">
